Proceso EdadesDeJuanaPedroYAna
	Escribir Sin Saltar "Ingrese el valor de edad de Ana:";
	Leer edad_de_Ana;
	Escribir Sin Saltar "Ingrese el valor de edad de Juana:";
	Leer edad_de_Juana;
	edad_de_Pedro <- (edad_de_Juana+edad_de_Ana)*2;
	promedio_de_edades <- (edad_de_Pedro+edad_de_Juana+edad_de_Ana)/3;
	Escribir "Valor de edad de Pedro: ", edad_de_Pedro;
	Escribir "Valor de promedio de edades: ", promedio_de_edades;
FinProceso
