Proceso DiarioElHocicon
	Escribir Sin Saltar "Ingrese el valor de numero de centimetros:";
	Leer numero_de_centimetros;
	Escribir Sin Saltar "Ingrese el valor de numero de colores:";
	Leer numero_de_colores;
	Escribir Sin Saltar "Ingrese el valor de numero de palabras:";
	Leer numero_de_palabras;
	monto_a_pagar <- numero_de_palabras*5+numero_de_centimetros*10+numero_de_colores*15;
	Escribir "Valor de monto a pagar: ", monto_a_pagar;
FinProceso
