Proceso AreaYPerimetroDeUnCuadrado
	
	//Hallar el área y el perímetro de un cuadrado.
	
    Escribir Sin Saltar "Ingrese el valor de lado:";
    Leer lado;
    area <- lado*lado;
    perimetro <- lado*4;
    Escribir "Valor de area: ", area;
    Escribir "Valor de perimetro: ", perimetro;
FinProceso