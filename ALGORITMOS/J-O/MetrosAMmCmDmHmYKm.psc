Proceso MetrosAMmCmDmHmYKm
	Escribir Sin Saltar "Ingrese el valor de metros:";
	Leer metros;
	milimetros <- metros*1000;
	centimetros <- metros*100;
	decimetros <- metros*10;
	hectometros <- metros/100;
	kilometros <- metros/1000;
	Escribir "Valor de centimetros: ", centimetros;
	Escribir "Valor de decimetros: ", decimetros;
	Escribir "Valor de hectometros: ", hectometros;
	Escribir "Valor de kilometros: ", kilometros;
	Escribir "Valor de milimetros: ", milimetros;
FinProceso
