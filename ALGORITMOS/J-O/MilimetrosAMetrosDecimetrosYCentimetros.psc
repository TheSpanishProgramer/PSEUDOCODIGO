Proceso MilimetrosAMetrosDecimetrosYCentimetros
	Escribir Sin Saltar "Ingrese el valor de milimetros:";
	Leer milimetros;
	metros <- milimetros/1000;
	decimetros <- milimetros/100;
	centimetros <- milimetros/10;
	Escribir "Valor de centimetros: ", centimetros;
	Escribir "Valor de decimetros: ", decimetros;
	Escribir "Valor de metros: ", metros;
FinProceso
