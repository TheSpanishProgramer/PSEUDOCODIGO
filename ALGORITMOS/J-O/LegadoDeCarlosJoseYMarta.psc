Proceso LegadoDeCarlosJoseYMarta
	Escribir Sin Saltar "Ingrese el valor de fortuna:";
	Leer fortuna;
	legado_de_Carlos <- fortuna/3.0;
	legado_de_Jose <- legado_de_Carlos*4.0/3.0;
	legado_de_Martha <- legado_de_Jose/2.0;
	Escribir "Valor de legado de Carlos: ", legado_de_Carlos;
	Escribir "Valor de legado de Jose: ", legado_de_Jose;
	Escribir "Valor de legado de Martha: ", legado_de_Martha;
FinProceso
