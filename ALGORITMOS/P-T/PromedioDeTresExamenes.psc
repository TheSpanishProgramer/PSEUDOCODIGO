Proceso PromedioDeTresExamenes
	Escribir Sin Saltar "Ingrese el valor de examen 1ro:";
	Leer examen_1ro;
	Escribir Sin Saltar "Ingrese el valor de examen 2do:";
	Leer examen_2do;
	Escribir Sin Saltar "Ingrese el valor de examen 3ro:";
	Leer examen_3ro;
	promedio <- examen_1ro*0.25+examen_2do*0.25+examen_3ro*0.5;
	Escribir "Valor de promedio: ", promedio;
FinProceso
