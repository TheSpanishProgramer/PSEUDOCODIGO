Proceso GradosCentigradosAGradosFahrenheitYAKelvins
	Escribir Sin Saltar "Ingrese el valor de grados centigrados:";
	Leer grados_centigrados;
	kelvins <- grados_centigrados+273.15;
	grados_fahrenheit <- 1.8*grados_centigrados+32;
	Escribir "Valor de grados fahrenheit: ", grados_fahrenheit;
	Escribir "Valor de kelvins: ", kelvins;
FinProceso
